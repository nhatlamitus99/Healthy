<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E2E2"
    android:orientation="vertical"
    tools:context=".MainScreenActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="30dp"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:background="#B8C0C7"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text="QUẢN LÝ HOẠT ĐỘNG"
        android:textColor="#438EE4"
        >

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_gravity="center"
        android:background="#F5F2F2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/foods"
            android:src="@drawable/foods">

        </ImageButton>

        <ImageButton
            android:id="@+id/exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/exercise">

        </ImageButton>


        <ImageButton
            android:id="@+id/sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/sleeps">

        </ImageButton>

        <ImageButton
            android:id="@+id/water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/waters">

        </ImageButton>


    </LinearLayout>


    <LinearLayout
        android:background="#F5F2F2"
        android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food-Drink"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activities"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:text="Sleep"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water"
            android:paddingLeft="35dp"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp">

    </LinearLayout>


    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:id="@+id/feel"
        android:layout_height="wrap_content"
        android:background="@drawable/feel">

    </ImageView>




    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingLeft="4dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/idea"
            android:layout_width="223dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/ideas">

        </ImageButton>


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="@drawable/alarms"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/alarm"
            android:layout_height="wrap_content">

        </ImageButton>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content">

        </LinearLayout>

        <ImageButton
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/statistic"
            android:background="@drawable/statistics">

        </ImageButton>

    </LinearLayout>

</LinearLayout>